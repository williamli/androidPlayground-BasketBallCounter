<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.bbi.williamli.basketballcounter.MainActivity">

    <TextView
        android:id="@+id/teamALabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="@string/teamALabel" />

    <TextView
        android:id="@+id/teamBLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="@string/teamBLabel" />

    <TextView
        android:id="@+id/teamAScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/teamALabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        />

    <TextView
        android:id="@+id/teamBScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/teamBLabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resetBtnLabel"
        android:id="@+id/resetButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add1BtnLabel"
        android:id="@+id/teamAScoreBtn1"
        android:layout_alignLeft="@id/teamALabel"
        android:layout_below="@id/teamAScore"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add2BtnLabel"
        android:id="@+id/teamAScoreBtn2"
        android:layout_alignLeft="@id/teamALabel"
        android:layout_below="@id/teamAScoreBtn1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add3BtnLabel"
        android:id="@+id/teamAScoreBtn3"
        android:layout_alignLeft="@id/teamALabel"
        android:layout_below="@id/teamAScoreBtn2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add1BtnLabel"
        android:id="@+id/teamBScoreBtn1"
        android:layout_alignRight="@id/teamBLabel"
        android:layout_below="@id/teamBScore"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add2BtnLabel"
        android:id="@+id/teamBScoreBtn2"
        android:layout_alignRight="@id/teamBLabel"
        android:layout_below="@id/teamBScoreBtn1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add3BtnLabel"
        android:id="@+id/teamBScoreBtn3"
        android:layout_alignRight="@id/teamBLabel"
        android:layout_below="@id/teamBScoreBtn2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
